# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=week2
DATABASE_URL="postgresql://postgres:CHANGE_THIS_TO_SECURE_PASSWORD@postgres:5432/week2"

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BROKERS="kafka:9092"

# ============================================
# Security & Authentication
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="GENERATE_RANDOM_64_CHAR_HEX_STRING"
SECRET_KEY="GENERATE_RANDOM_64_CHAR_HEX_STRING"

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY="GENERATE_RANDOM_BASE64_STRING"

# ============================================
# Email Configuration (Resend)
# ============================================
RESEND_EMAIL_KEY="re_YOUR_RESEND_API_KEY"
RESEND_FROM="noreply@yourdomain.com"

# ============================================
# Email Configuration (Gmail - Optional)
# ============================================
# Get app password from: https://myaccount.google.com/apppasswords
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-16-char-app-password"

# ============================================
# Application URLs
# ============================================
# Replace with your actual domain or EC2 public IP
# Without domain: http://YOUR_EC2_PUBLIC_IP
# With domain: https://yourdomain.com
APP_BASE_URL="http://YOUR_DOMAIN_OR_IP"
FRONTEND_URL="http://YOUR_DOMAIN_OR_IP"
NEXT_PUBLIC_API_URL="http://YOUR_DOMAIN_OR_IP/api"
PUBLIC_WEBHOOK_URL="http://YOUR_DOMAIN_OR_IP"

# ============================================
# Node Environment
# ============================================
NODE_ENV="production"

# ============================================
# IMPORTANT NOTES:
# ============================================
# 1. Replace ALL placeholder values with actual values
# 2. Use strong, unique passwords and secrets
# 3. After setting up SSL, change URLs to https://
# 4. Keep this file secure and never commit to git
# 5. Backup this file in a secure location
